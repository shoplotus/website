{%- if form.errors -%}
	{%- for field in form.errors -%}
		<span class="alert alert--error">
			<span>
				{%- if field == 'form' -%}
					{{ form.errors.messages[field] }}
				{%- else -%}
					<strong>{{ form.errors.translated_fields[field] }}</strong> {{ form.errors.messages[field] }}
				{%- endif -%}
			</span>
		</span>
	{%- endfor -%}
{%- endif -%}